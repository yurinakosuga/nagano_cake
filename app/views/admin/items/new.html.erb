<h5>商品新規登録</h5>

<%= form_with model: @item, url:admin_items_path do |f| %>
<p>商品画像</p>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_area :introduction %>
<p>ジャンル</p>
<p>税抜価格</p>
<%= f.text_field :price %>円
<p>販売ステータス</p>
<%= f.radio_button :is_active, true %>
<%= f.label :is_active, "販売中" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売停止" %>




     <%= f.submit '新規登録' %>
  <% end %>
