<div class="container mt-5">
  <div class="row">
    <h5>商品一覧</h5>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
     
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <% if item.is_active %>
              <td>販売中</td>
          　<% else %>
              <td>販売停止中</td>
            <% end %> 
          </tr>
        <% end %>
        
        <%= link_to "新規登録", new_admin_item_path %>
          
      </tbody>
    </table>
  </div>
</div>