<div class="container mt-5">
  <div class="row">
   
      <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
      
      <p>会員ID</p>
      <%= @customer.id %>
      
    　<%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
    　
    　 　<div class="field">
          氏名
        　<%= f.text_field :last_name %>
  　　　　　　<%= f.text_field :first_name %>
        </div>
  
        <div class="field">
          フリガナ
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        
        <div class="field">
          郵便番号
          <%= f.text_field :postal_code %>
        </div>
        
        <div class="field">
          住所
          <%= f.text_field :address %>
        </div>
        
        <div class="field">
          電話番号
          <%= f.text_field :telephone_number %>
        </div>
        
        <div class="field">
          メールアドレス
          <%= f.email_field :email %>
        </div>
        
        <div class="field">
        　販売ステータス
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "退会" %>
        </div>
      
      
           <%= f.submit '変更を保存', class:"btn btn-success" %>
        <% end %>
        
    
  </div>
</div>